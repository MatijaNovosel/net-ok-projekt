@model WebShop.Web.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<h3 class="text-center">We have the best discounts and merchandise!</h3>
<div class="grid-cols grid mt-4">
    @foreach (var item in Model.Items)
    {
        <item-card item="@item">
            <tag-pill-collection text-collection="item.Tags.Select(x => x.Description).ToList()"></tag-pill-collection>
        </item-card>
    }
</div>