@model WebShop.Web.ViewModels.ItemsGridViewModel

@{
    ViewData["Title"] = "Our merchandise";
}

<h3 class="text-center my-5">Our merchandise</h3>
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label asp-for="@Model.Search.Name" class="control-label"></label>
                <input asp-for="@Model.Search.Name" class="form-control" />
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="@Model.Search.TagId" class="control-label"></label>
                <select multiple asp-for="@Model.Search.TagId" asp-items="@Model.TagSelect" class="form-control"></select>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group text-right">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
<div class="grid-cols grid container">
    @foreach (var item in Model.Items)
    {
        <item-card item="@item">
            <tag-pill-collection text-collection="item.Tags.Select(x => x.Description).ToList()"></tag-pill-collection>
        </item-card>
    }
</div>