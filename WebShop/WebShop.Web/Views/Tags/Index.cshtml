@model IEnumerable<Vjezba.Model.Tag>

@{
    ViewData["Title"] = "Tag list";
}

<h1>List of tags</h1>

<p>
    <a class='btn btn-outline-success' asp-action="Create">Create New</a>
</p>
<table class="table border-shaded">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class='btn btn-outline-primary' asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class='btn btn-outline-danger ml-2' asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
