@model IEnumerable<WebShop.Model.Tag>

@{
    ViewData["Title"] = "Tag list";
}

<div class="container mt-2">
    <div class="d-flex justify-content-between align-items-center py-4">
        <h4>List of tags</h4>
        <a class='btn btn-outline-success' asp-action="Create">Create New</a>
    </div>
    <table class="table border-shaded">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a class='btn btn-outline-primary' asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class='btn btn-outline-danger ml-2' asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
