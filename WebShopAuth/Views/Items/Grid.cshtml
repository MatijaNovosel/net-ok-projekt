@model WebShop.Web.ViewModels.ItemsGridViewModel

@{
    ViewData["Title"] = "Our merchandise";
}

<h3 class="text-center my-5">Our merchandise</h3>
<div class="container">
    <div class="row">
        <div class="col-12">
            <form id="searchItemForm">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="@Model.Search.Name" class="control-label"></label>
                            <input name="Name" asp-for="@Model.Search.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group text-right">
                            <button id="searchItemsBtn" type="button" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="grid-cols grid container" id="items-grid">
    @foreach (var item in Model.Items)
    {
        <item-card item="@item">
            <tag-pill-collection text-collection="item.Tags.Select(x => x.Description).ToList()"></tag-pill-collection>
        </item-card>
    }
</div>

@section scripts {
    <script>
        document.getElementById("searchItemsBtn").addEventListener("click", () => {
            searchItems();
        }, true);
    </script>
}